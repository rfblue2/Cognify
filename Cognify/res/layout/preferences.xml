<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/musicLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
    <ToggleButton
        android:id="@+id/musicToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:textAppearance="?android:attr/textAppearanceLarge"
         />
        
    </LinearLayout>
   
        <TextView
        android:id="@+id/musicType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicLayout"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:text="Music Type"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/musicGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" >

        <RadioButton
            android:id="@+id/peaceRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Exciting" />

        <RadioButton
            android:id="@+id/exciteRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peaceful" />

    </RadioGroup>

</RelativeLayout>